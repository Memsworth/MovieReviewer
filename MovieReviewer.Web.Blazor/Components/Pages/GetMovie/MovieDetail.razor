@using MovieReviewer.Core.DTO.Outputs
<MudCard Class="mb-4">
    <MudCardMedia Image="https://via.placeholder.com/300x450" Alt="@Movie?.Title"/>
    <MudCardContent>
        <MudText Typo="Typo.h5" Align="Align.Center" Class="mb-2">@Movie?.Title</MudText>
        <MudGrid>
            <MudItem xs="12" Class="mb-1">
                <MudText Typo="Typo.body1">
                    <strong>IMDb Rating:</strong> @Movie?.ImdbRating
                </MudText>
            </MudItem>
            <MudItem xs="12" Class="mb-1">
                <MudText Typo="Typo.body1">
                    <strong>Language:</strong> @Movie?.MovieLanguage
                </MudText>
            </MudItem>
            <MudItem xs="12" Class="mb-1">
                <MudText Typo="Typo.body1">
                    <strong>IMDb ID:</strong> @Movie?.ImdbId
                </MudText>
            </MudItem>
        </MudGrid>
    </MudCardContent>
</MudCard>

@code {
    [Parameter] [EditorRequired] public MovieViewDTO? Movie { get; set; }
}