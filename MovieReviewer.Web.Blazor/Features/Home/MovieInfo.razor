@using MovieReviewer.Core.DTO.Outputs

<MudItem xs="12">
    <MudText Typo="Typo.h5" Align="Align.Left">@Movie.Title</MudText>
</MudItem>
<MudItem xs="12">
    <MudText Typo="Typo.body1">@Movie.Plot</MudText>
</MudItem>
<MudItem xs="6">
    <MudText Typo="Typo.body2">Rating: @Movie.ImdbRating</MudText>
</MudItem>
<MudItem xs="6">
    <MudText Typo="Typo.body2">Language: @Movie.MovieLanguage</MudText>
</MudItem>
<MudItem xs="6">
    <MudText Typo="Typo.body2">ImdbId: @Movie.ImdbId</MudText>
</MudItem>

@code {
    [Parameter, EditorRequired] public required MovieViewDTO Movie { get; set; }
}